<Window x:Class="TwoDSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TwoDSample"
        xmlns:my="clr-namespace:SharpGL.WPF;assembly=SharpGL.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <DockPanel>
            <ToolBarPanel DockPanel.Dock="Top">
                <ToolBar>
                    <Button Content="Randomise!!!" Click="Button_Click" />
                </ToolBar>
            </ToolBarPanel>

            <my:OpenGLControl Name="openGLControl1" OpenGLDraw="openGLControl1_OpenGLDraw"
                              Resized="openGLControl1_Resized" />
        </DockPanel>
    </Grid>
</Window>
