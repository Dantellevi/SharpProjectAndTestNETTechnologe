<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Project_SignIn">


    <Style x:Key="MainLabelsSharp">
        <Setter Property="Control.FontFamily" Value="GOST Type A"/>
        <Setter Property="Control.FontSize" Value="48" />
        <Setter Property="Control.FontWeight" Value="Bold" />
        <Setter Property="Control.Background" Value="#040f3d" />
        <Setter Property="Control.Foreground" Value="#2b51ef" />
        <Setter Property="Control.HorizontalAlignment" Value="Center" />
        <Setter Property="Control.VerticalAlignment" Value="Center" />
    </Style>

    <Style x:Key="LabelAcademy">
        <Setter Property="Control.FontFamily" Value="Heavenetica"/>
        <Setter Property="Control.FontSize" Value="22" />
        <Setter Property="Control.Background" Value="#040f3d" />
        <Setter Property="Control.Foreground" Value="#2b51ef" />
        <Setter Property="Control.HorizontalAlignment" Value="Center" />
    </Style>
    
    
</ResourceDictionary>